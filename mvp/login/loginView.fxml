<?xml version="1.0" encoding="UTF-8"?> 
 
<?import javafx.scene.control.*?> 
<?import java.lang.*?> 
<?import javafx.scene.layout.*?> 
<?import javafx.scene.layout.GridPane?> 
 
<GridPane xmlns="http://javafx.com/javafx/8"
 xmlns:fx="http://javafx.com/fxml/1" 
 fx:controller="gui.mvp.login.Presenter" > 
   <children> 
      <Label text="Login-Kennung:" 
       GridPane.columnIndex="1" GridPane.rowIndex="1" /> 
      <TextField fx:id="loginName" 
       GridPane.columnIndex="2" GridPane.rowIndex="1" onAction="#login" /> 
      <Label text="Passwort:" GridPane.columnIndex="1" 
       GridPane.rowIndex="2" /> 
      <PasswordField fx:id="password" 
       GridPane.columnIndex="2" GridPane.rowIndex="2" onAction="#login" /> 
      <Button fx:id="loginButton" text="Login" 
       GridPane.columnIndex="1" GridPane.columnSpan="2" 
       GridPane.rowIndex="3" onAction="#login"/> 
      <Label fx:id="status" GridPane.columnIndex="1" 
       GridPane.columnSpan="2" GridPane.rowIndex="4" /> 
   </children> 
</GridPane> 